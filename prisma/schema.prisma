generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  type      UserType
  account   Account?
  profile   Profile?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id             Int             @id @default(autoincrement())
  userId         Int             @unique
  user           User            @relation(fields: [userId], references: [id])
  boardingHouses BoardingHouse[] @relation("TenantBoardingHouses")
  listings       BoardingHouse[] @relation("LandlordListings")
}

model Profile {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  gender    String
  userId    Int    @unique
  user      User   @relation(fields: [userId], references: [id])
}

model BoardingHouse {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  description String
  landlordId  Int
  createdAt   DateTime @default(now())
  rating      Int
  reviews     String[]
  tenantId    Int?
  updatedAt   DateTime @updatedAt
  landlord    Account  @relation("TenantBoardingHouses", fields: [landlordId], references: [id])
  tenant      Account? @relation("LandlordListings", fields: [tenantId], references: [id])
}

enum UserType {
  LANDLORD
  TENANT
  ADMIN
}
